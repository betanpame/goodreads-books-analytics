# Nombre del proyecto (se usa para nombres de contenedores, etc.)
PROJECT_NAME=goodreads_books_analytics

# Versión de la imagen de PostgreSQL
# Ejemplo: 17, 16, 15-alpine, etc.
POSTGRES_VERSION=17

# === Variables OBLIGATORIAS para PostgreSQL ===

# Nombre de la base de datos por defecto
POSTGRES_DB=goodreads

# Usuario administrador de la base de datos
POSTGRES_USER=goodreads_user

# Contraseña del usuario (OBLIGATORIO cambiar este valor)
POSTGRES_PASSWORD=super_seguro_cambia_esto


# === Variables RECOMENDADAS / OPCIONALES ===

# Puerto expuesto en tu máquina local
# (puedes cambiarlo si 5432 ya está ocupado)
POSTGRES_PORT=5432

# Host al que se conectarán los scripts de Python
# Normalmente "localhost" cuando trabajas en tu máquina
POSTGRES_HOST=localhost

# Si prefieres definir manualmente la URL completa de conexión
# para SQLAlchemy, puedes usar DATABASE_URL. Si está definida,
# tendrá prioridad sobre las variables POSTGRES_*
# Ejemplo:
# DATABASE_URL=postgresql+psycopg2://user:password@localhost:5432/goodreads
# DATABASE_URL=
